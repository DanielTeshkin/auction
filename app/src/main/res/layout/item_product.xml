<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.example.auctionapp.domain.models.FavoriteProductModel" />
        <variable
            name="listener"
            type="com.example.auctionapp.ui.search.adapter.ProductAdapterDelegate.OnItemClickListener" />

        <variable
            name="listenerFavorite"
            type="com.example.auctionapp.ui.search.adapter.ProductAdapterDelegate.OnItemClickListener" />
    </data>

    <LinearLayout
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{(view) -> listener.onItemClick(product)}"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:onClick="@{(view) -> listenerFavorite.onFavoriteClick(product)}"
            android:elevation="30dp"
            android:focusable="true"
            app:cardCornerRadius="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/car"
                android:scaleType="centerCrop"
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.material.card.MaterialCardView>



        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dateTV"
                    android:text="START-STOP"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:id="@+id/like"
                    android:layout_width="25dp"
                    android:onClick="@{(view) -> listenerFavorite.onFavoriteClick(product)}"
                    android:layout_gravity="center"
                    android:layout_height="22dp"
                    android:background="@drawable/selector_like"
                    android:button="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <TextView
                android:id="@+id/price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="price"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/title"
                android:textColor="@color/black"
                android:text="title"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
    </LinearLayout>
</layout>